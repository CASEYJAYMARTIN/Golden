@require functions
@require mixins
@require variables

*, *:after, *:before
    box-sizing border-box

.row
    display flex
    flex-direction row
    flex-wrap wrap
    padding 0 rowGutter(gutter)
.row:first-child
    padding rowGutter(gutter) rowGutter(gutter) 0 rowGutter(gutter)
.row:last-child
    padding 0 rowGutter(gutter) rowGutter(gutter) rowGutter(gutter)
.row:after
    content ""
    display table
    clear both

.col
    display flex
    flex 1
    flex-direction(column)
    float left
    padding colGutter(gutter)
    position relative

.expander
    bottom 0
    left 0
    position absolute
    right 0
    top 0

@require golden-xs
@require golden-sm
@require golden-md
@require golden-lg
@require golden-xl
