@require functions
@require mixins
@require variables

*, *:after, *:before
  box-sizing(border-box)

.row
  display(flex)
  flex-wrap(wrap)
  padding 0 rowGutter(gutter)
.row:first-child
  padding rowGutter(gutter) rowGutter(gutter) 0 rowGutter(gutter)
.row:last-child
  padding 0 rowGutter(gutter) rowGutter(gutter) rowGutter(gutter)
.row:after
  content ""
  display table
  clear both

.col
  float left
  padding colGutter(gutter)

